%html
  %head
    %title= title
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults
    = csrf_meta_tag
  %body
    %div#content-wrapper
      %h1.title= (@title.nil?) ? @base_title : @title
      %div#content= yield
    %div#debug-info= debug(params) if Rails.env.development?
    